{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>wim-web/renovate-config",
    "github>aquaproj/aqua-renovate-config:file#1.5.0(ansible/roles/aqua/files/aqua.yml)",
    "github>aquaproj/aqua-renovate-config:installer-script#1.5.0(install.sh)"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^install.sh$"
      ],
      "matchStrings": [
        "sudo bash -s -- -v v(?<currentValue>.*) -i /usr/bin/aqua"
      ],
      "depNameTemplate": "aquaproj/aqua",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ]
}
