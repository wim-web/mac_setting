{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>wim-web/renovate-config",
    "github>aquaproj/aqua-renovate-config:file#1.2.4(ansible/roles/aqua/files/aqua.yml)",
    "github>aquaproj/aqua-renovate-config:installer-script#1.2.4(install.sh)"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^initialize$"
      ],
      "matchStrings": [
        "PYTHON_VERSION=\"(?<currentValue>.*)\""
      ],
      "depNameTemplate": "python/cpython",
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "fileMatch": [
        "^initialize$"
      ],
      "matchStrings": [
        "ANSIBLE_VERSION=\"(?<currentValue>.*)\""
      ],
      "depNameTemplate": "ansible",
      "datasourceTemplate": "pypi"
    },
    {
      "fileMatch": [
        "^install.sh$"
      ],
      "matchStrings": [
        "sudo bash -s -- -v v(?<currentValue>.*) -i /usr/bin/aqua"
      ],
      "depNameTemplate": "aquaproj/aqua",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ]
}
